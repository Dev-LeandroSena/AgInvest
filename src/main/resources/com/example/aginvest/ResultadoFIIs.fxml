<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="16" prefWidth="360" prefHeight="640"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.controller.viewcontroller.ResultadoFIIsController"
      style="-fx-background-color: #F8F9FA;">

    <!-- Barra de Navegação Superior -->
    <HBox alignment="CENTER_LEFT" spacing="16" style="-fx-background-color: #1E90FF; -fx-padding: 8 16 8 16;">
        <HBox alignment="CENTER_LEFT" spacing="0">
            <Label text="Invest" style="-fx-text-fill: #FFFFFF; -fx-font-size: 20; -fx-font-weight: bold;" />
            <Label text="7" style="-fx-text-fill: #1FCE52; -fx-font-size: 20; -fx-font-weight: bold;" />
        </HBox>
        <HBox HBox.hgrow="ALWAYS" />
        <Button fx:id="homeButton"  text="Home" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14; -fx-cursor: hand;" />
        <Button fx:id="faqButton"  text="FAQ" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14; -fx-cursor: hand;" />
        <Button fx:id="contaButton"  text="Conta" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14; -fx-cursor: hand;" />
    </HBox>

    <!-- Título -->
    <Label text="Resultados FIIs" style="-fx-text-fill: #333333;">
        <font>
            <Font name="Roboto Medium" size="20" />
        </font>
        <padding>
            <Insets top="24" bottom="8" />
        </padding>
    </Label>

    <!-- Valor Investido -->
    <Label text="Valor Investido: R$100000,00" style="-fx-text-fill: #333333;">
        <font>
            <Font name="Roboto Medium" size="16" />
        </font>
        <padding>
            <Insets bottom="8" />
        </padding>
    </Label>

    <!-- Seção Gráficos -->
    <VBox spacing="12" alignment="CENTER">
        <Label text="Gráficos" style="-fx-text-fill: #333333;">
            <font>
                <Font name="Roboto Medium" size="16" />
            </font>
        </Label>
        <!-- Placeholder para o gráfico de linha -->
        <Region prefWidth="320" prefHeight="120" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />
        <!-- Placeholder para o gráfico de barras -->
        <Region prefWidth="320" prefHeight="120" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />
    </VBox>

    <!-- Seção Ativos -->
    <VBox spacing="12" alignment="CENTER">
        <Label text="Ativos" style="-fx-text-fill: #333333;">
            <font>
                <Font name="Roboto Medium" size="16" />
            </font>
        </Label>

        <!-- FIIs 1 -->
        <VBox spacing="8" alignment="CENTER_LEFT" prefWidth="320" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-border-color: #1E90FF; -fx-border-width: 1; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="FIIs1" style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-font-weight: bold;" />
            <Label text="Quantidade Total Cotas: 10 cotas" style="-fx-text-fill: #333333; -fx-font-size: 12;" />
            <Label text="Saldo Cotas: R$10000,00" style="-fx-text-fill: #1FCE52; -fx-font-size: 12;" />
            <Label text="Saldo Dividendos: R$100,00" style="-fx-text-fill: #1FCE52; -fx-font-size: 12;" />
        </VBox>

        <!-- FIIs 2 -->
        <VBox spacing="8" alignment="CENTER_LEFT" prefWidth="320" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-border-color: #1E90FF; -fx-border-width: 1; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="FIIs2" style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-font-weight: bold;" />
            <Label text="Quantidade Total Cotas: 10 cotas" style="-fx-text-fill: #333333; -fx-font-size: 12;" />
            <Label text="Saldo Cotas: R$10000,00" style="-fx-text-fill: #1FCE52; -fx-font-size: 12;" />
            <Label text="Saldo Dividendos: R$100,00" style="-fx-text-fill: #1FCE52; -fx-font-size: 12;" />
        </VBox>

        <!-- FIIs 3 -->
        <VBox spacing="8" alignment="CENTER_LEFT" prefWidth="320" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-border-color: #1E90FF; -fx-border-width: 1; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16" />
            </padding>
            <Label text="FIIs3" style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-font-weight: bold;" />
            <Label text="Quantidade Total Cotas: 10 cotas" style="-fx-text-fill: #333333; -fx-font-size: 12;" />
            <Label text="Saldo Cotas: R$10000,00" style="-fx-text-fill: #1FCE52; -fx-font-size: 12;" />
            <Label text="Saldo Dividendos: R$100,00" style="-fx-text-fill: #1FCE52; -fx-font-size: 12;" />
        </VBox>
    </VBox>

    <!-- Botões Inferiores -->
    <HBox alignment="CENTER" spacing="16">
        <Button fx:id="backButton" text="Voltar"  prefWidth="140" prefHeight="48"
                style="-fx-background-color: #D3D3D3; -fx-background-radius: 12; -fx-text-fill: #333333; -fx-font-size: 14; -fx-cursor: hand;" />
        <Button fx:id="novaSimulacaoButton" text="Nova simulação" prefWidth="140" prefHeight="48"
                style="-fx-background-color: #1FCE52; -fx-background-radius: 12; -fx-text-fill: #FFFFFF; -fx-font-size: 14; -fx-cursor: hand;" />
    </HBox>

</VBox>