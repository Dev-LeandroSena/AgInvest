<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>

<VBox alignment="TOP_CENTER" spacing="24" style="-fx-background-color: #ffffff;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.LoginController"
      prefWidth="360" maxWidth="360">

    <padding>
        <Insets top="40" right="32" bottom="40" left="32"/>
    </padding>

    <!-- Logo Section -->
    <HBox alignment="CENTER" spacing="0">
        <Label text="Invest" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0267ff;" />
        <Label text="7" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" />
    </HBox>

    <!-- Form Section -->
    <VBox alignment="CENTER_LEFT" spacing="16">
        <!-- Email Field -->
        <VBox spacing="4">
            <Label text="E-mail" style="-fx-text-fill: #555555; -fx-font-size: 14;"/>
            <TextField promptText="Value" style="-fx-background-color: #f8f8f8; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-padding: 12; -fx-font-size: 14;"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="4">
            <Label text="Senha" style="-fx-text-fill: #555555; -fx-font-size: 14;"/>
            <PasswordField promptText="Value" style="-fx-background-color: #f8f8f8; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-padding: 12; -fx-font-size: 14;"/>
        </VBox>
    </VBox>

    <!-- Action Section -->
    <VBox alignment="CENTER" spacing="16">
        <!-- Sign In Button -->
        <Button fx:id="comecarButton" onAction="#onclickhome" text="Sign In"
                style="-fx-background-color: #0267ff; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;"
                minWidth="200" minHeight="48">
            <effect>
                <DropShadow color="rgba(2, 103, 255, 0.3)" radius="8" spread="0.2"/>
            </effect>
        </Button>

        <!-- Forgot Password Link -->
        <Hyperlink text="Forgot password?" style="-fx-text-fill: #666666; -fx-font-size: 13; -fx-underline: true; -fx-border-width: 0;"/>
    </VBox>
</VBox>