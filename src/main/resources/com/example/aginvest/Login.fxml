<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aginvest.LoginController">
    <!-- Logo -->
    <Label text="Invest7">
        <font>
            <Font name="System Bold" size="24" />
        </font>
    </Label>

    <!-- Title -->
    <Label text="Login">
        <font>
            <Font size="18" />
        </font>
    </Label>

    <!-- Email Field -->
    <Label text="E-mail" />
    <TextField promptText="Value" style="-fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3;" />

    <!-- Password Field -->
    <Label text="Senha" />
    <TextField promptText="Value" style="-fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3;" />

    <!-- Sign In Button -->
    <Button fx:id="comecarButton" onAction="#onclickhome" text="Sign In" style="-fx-background-color: #333333; -fx-text-fill: white;" prefWidth="200" />

    <!-- Forgot Password Link -->
    <Hyperlink text="Forgot password?" />
</VBox>