<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.controller.viewcontroller.LoginController"
      alignment="CENTER" spacing="24" prefWidth="360" prefHeight="640"
      style="-fx-background-color: #FFFFFF; -fx-padding: 16;">

    <!-- Logotipo -->
    <Label text="Invest7" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #1E90FF;" />

    <!-- Título -->
    <Label text="Login" style="-fx-font-size: 20; -fx-text-fill: #666;" />

    <!-- Mensagem de Erro (inicialmente invisível) -->
    <Label fx:id="errorMessage" style="-fx-text-fill: #FF0000; -fx-font-size: 14;" visible="false" />

    <!-- Campo E-mail -->
    <VBox spacing="8" alignment="CENTER_LEFT">
        <Label text="E-mail" style="-fx-font-size: 16; -fx-text-fill: #666;" />
        <TextField fx:id="emailFieldLogin" promptText="E-mail"
                   style="-fx-pref-height: 48; -fx-pref-width: 300; -fx-background-color: #FFFFFF;
                          -fx-border-color: #87CEFA; -fx-border-radius: 8; -fx-background-radius: 8;" />
    </VBox>

    <!-- Campo Senha -->
    <VBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Senha" style="-fx-font-size: 16; -fx-text-fill: #666;" />
        <PasswordField fx:id="senhaFielLogin" promptText="Senha"
                       style="-fx-pref-height: 48; -fx-pref-width: 300; -fx-background-color: #FFFFFF;
                          -fx-border-color: #87CEFA; -fx-border-radius: 8; -fx-background-radius: 8;" />
    </VBox>

    <!-- Botão Sign In -->
    <Button fx:id="fazerLogin" text="Sign In" onAction="#realizarLogin"
            style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 16;
                   -fx-pref-width: 200; -fx-pref-height: 48; -fx-background-radius: 8; -fx-cursor: hand;" />

    <!-- Link Esqueci a senha -->
    <Hyperlink fx:id="forgotPasswordLink" text="Esqueci a senha"
               style="-fx-font-size: 14; -fx-text-fill: #1E90FF; -fx-border-color: transparent;" />

</VBox>