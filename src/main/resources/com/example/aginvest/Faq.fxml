<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.FaqController"
      prefHeight="640"
      prefWidth="360"
      style="-fx-background-color: #F5F5F5;"
      spacing="0">

    <!-- Cabeçalho Fixo -->
    <HBox alignment="CENTER" style="-fx-background-color: #1E88E5;" prefHeight="50">
        <Label text="Invest7" style="-fx-font-family: 'Arial'; -fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-padding: 0 0 0 15;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="botaoHome" onAction="#manipularBotaoHome" text="🏠" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 16;" />
        <Button fx:id="botaoFaq" onAction="#manipularBotaoFaq" text="❓" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 16;" />
        <Button fx:id="botaoConta" onAction="#manipularBotaoConta" text="👤" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 16; -fx-padding: 0 15 0 0;" />
    </HBox>

    <!-- Área de Conteúdo com Rolagem -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #F5F5F5; -fx-border-color: transparent;">
        <VBox style="-fx-background-color: #F5F5F5;" spacing="10">
            <padding>
                <Insets top="0" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Título FAQ -->
            <Label text="Perguntas Frequentes" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #1E88E5; -fx-padding: 15 15 5 15;" />

            <!-- Lista de FAQs -->
            <ListView fx:id="listaFaq" prefHeight="470" prefWidth="330"
                      style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-background-radius: 8;">
                <padding>
                    <Insets left="10" right="10" />
                </padding>
            </ListView>

            <!-- Botão Voltar -->
            <Button text="Voltar para Home" onAction="#voltarParaHome"
                    style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"
                    maxWidth="Infinity" />
        </VBox>
    </ScrollPane>
</VBox>