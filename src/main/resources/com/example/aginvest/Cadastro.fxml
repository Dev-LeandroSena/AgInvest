<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" prefHeight="640" prefWidth="360" spacing="15" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <!-- Título -->
    <Label alignment="CENTER" style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0267ff;" text="Bem-vindo" VBox.vgrow="NEVER" />

    <!-- Subtítulo -->
    <Label alignment="CENTER" style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;" text="Entre com sua conta ou crie uma nova para continuar" wrapText="true" />

    <!-- Abas Entrar/Cadastrar -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="btnEntrar" prefHeight="40" prefWidth="150" style="-fx-background-color: #f0f0f0; -fx-text-fill: #000000; -fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px;" text="Entrar" />
        <Button fx:id="btnCadastrar" prefHeight="40" prefWidth="150" style="-fx-background-color: #ffffff; -fx-text-fill: #0267ff; -fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-border-color: #0267ff; -fx-border-width: 1;" text="Cadastrar" />
    </HBox>

    <!-- Campo Nome -->
    <Label style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;" text="Nome completo" />
    <TextField fx:id="txtNome" prefHeight="40" prefWidth="300" promptText="Seu nome" style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3; -fx-border-radius: 5; -fx-background-radius: 5;" />

    <!-- Campo Email -->
    <Label style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;" text="Email" />
    <TextField fx:id="txtEmail" prefHeight="40" prefWidth="300" promptText="seu@email.com" style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3; -fx-border-radius: 5; -fx-background-radius: 5;" />

    <!-- Campo Senha -->
    <Label style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;" text="Senha" />
    <PasswordField fx:id="txtSenha" prefHeight="40" prefWidth="300" promptText="Digite sua senha" style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3; -fx-border-radius: 5; -fx-background-radius: 5;" />

    <!-- Campo Confirmar Senha -->
    <Label style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-text-fill: #000000;" text="Confirmar senha" />
    <PasswordField fx:id="txtConfirmarSenha" prefHeight="40" prefWidth="300" promptText="Confirme sua senha" style="-fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-border-color: #d3d3d3; -fx-border-radius: 5; -fx-background-radius: 5;" />

    <!-- Botão Cadastrar -->
    <Button fx:id="btnConfirmarCadastro" alignment="CENTER" prefHeight="50" prefWidth="300" style="-fx-background-color: #0267ff; -fx-text-fill: #ffffff; -fx-font-family: 'Lemon Milk Pro Variable'; -fx-font-size: 14px; -fx-background-radius: 5;" text="Cadastrar" VBox.vgrow="NEVER" />

</VBox>