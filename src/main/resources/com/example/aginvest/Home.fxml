<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="8" style="-fx-background-color: #FFFFFF; -fx-padding: 0 10 0 10;" prefWidth="360" prefHeight="640" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aginvest.HomeController">
    <!-- Cabeçalho -->
    <HBox alignment="CENTER" style="-fx-background-color: #1E88E5;" prefHeight="40">
        <Label text="Invest7" style="-fx-font-family: 'Arial'; -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-padding: 0 0 0 10;" />
        <HBox HBox.hgrow="ALWAYS" />
        <Button fx:id="comecarButton" onAction="#onclickcomecar" text="🏠" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14;" />
        <Button fx:id="faqButton" onAction="#onClickFaq" text="❓" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14;" />
        <Button fx:id="contaButton" onAction="#onClickConta" text="👤" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14; -fx-padding: 0 10 0 0;" />
    </HBox>

    <!-- Título e Subtítulo -->
    <Label text="Bem Vindo, Fulano!" style="-fx-font-family: 'Arial'; -fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #000000; -fx-padding: 10 0 0 0;" />
    <Label text="Seu perfil é: Conservador" style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-text-fill: #666666;" />
    <Label text="Simulações disponíveis:" style="-fx-font-family: 'Arial'; -fx-font-size: 12; -fx-text-fill: #666666; -fx-padding: 5 0 5 0;" />

    <!-- Grid de Botões -->
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Button fx:id="perfilButton" onAction="#onClickPerfil" prefWidth="150" prefHeight="150" style="-fx-background-color: #8A4AF3; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-font-size: 14; -fx-background-radius: 10;">
            <text>👥 De Perfil</text>
            <GridPane.columnIndex>0</GridPane.columnIndex>
            <GridPane.rowIndex>0</GridPane.rowIndex>
        </Button>

        <Button fx:id="rendaFixaButton" onAction="#onClickRendaFixa" prefWidth="150" prefHeight="150" style="-fx-background-color: #4CAF50; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-font-size: 14; -fx-background-radius: 10;">
            <text>💵 Renda Fixa</text>
            <GridPane.columnIndex>1</GridPane.columnIndex>
            <GridPane.rowIndex>0</GridPane.rowIndex>
        </Button>

        <Button fx:id="acoesButton" onAction="#onClickAcoes" prefWidth="150" prefHeight="150" style="-fx-background-color: #FF9800; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-font-size: 14; -fx-background-radius: 10;">
            <text>📈 Ações</text>
            <GridPane.columnIndex>0</GridPane.columnIndex>
            <GridPane.rowIndex>1</GridPane.rowIndex>
        </Button>

        <Button fx:id="fundoImobiliarioButton" onAction="#onClickFundoImobiliario" prefWidth="150" prefHeight="150" style="-fx-background-color: #2196F3; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial'; -fx-font-size: 14; -fx-background-radius: 10;">
            <text>🏢 Fundo Imobiliário</text>
            <GridPane.columnIndex>1</GridPane.columnIndex>
            <GridPane.rowIndex>1</GridPane.rowIndex>
        </Button>
    </GridPane>
</VBox>