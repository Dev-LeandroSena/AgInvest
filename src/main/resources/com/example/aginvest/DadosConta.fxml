<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox fx:id="root" alignment="TOP_CENTER" spacing="16" styleClass="root" prefWidth="360" prefHeight="640"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.controller.viewcontroller.DadosDaContaController">

    <!-- Cabeçalho -->
    <HBox alignment="CENTER_LEFT" spacing="16" style="-fx-background-color: #1E90FF; -fx-padding: 8 16 8 16;">
        <HBox alignment="CENTER_LEFT" spacing="0">
            <Label text="Invest" style="-fx-text-fill: #FFFFFF; -fx-font-size: 20; -fx-font-weight: bold;" />
            <Label text="7" style="-fx-text-fill: #1FCE52; -fx-font-size: 20; -fx-font-weight: bold;" />
        </HBox>
        <HBox HBox.hgrow="ALWAYS" />
        <Button fx:id="homeButton" onAction="#onClickHome" text="Home" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14;" />
        <Button fx:id="faqButton" text="FAQ" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14;" />
        <Button fx:id="contaButton" text="Conta" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14;" />
    </HBox>

    <!-- Conteúdo Principal -->
    <VBox spacing="16" style="-fx-background-color: white; -fx-background-radius: 8;
                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);" prefWidth="328" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="16" right="16" bottom="24" left="16"/>
        </padding>

        <!-- Título -->
        <Label text="Dados da Conta" style="-fx-font-family: 'Arial'; -fx-font-size: 20;
                                             -fx-font-weight: bold; -fx-text-fill: #000000;" />

        <!-- Informações da Conta -->
        <VBox spacing="8" style="-fx-border-color: #1E88E5; -fx-border-radius: 10; -fx-border-width: 1;
                                 -fx-padding: 10;" prefWidth="296">
            <Label fx:id="nomeLabel" text="Nome Completo: Fulano da Silva"
                   style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-text-fill: #000000;" wrapText="true" />
            <Label fx:id="emailLabel" text="E-mail: fulsilva@gmail.com"
                   style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-text-fill: #000000;" wrapText="true" />
            <Label fx:id="aniversarioLabel" text="Aniversário: 01.01.2000"
                   style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-text-fill: #000000;" wrapText="true" />
            <Label fx:id="generoLabel" text="Gênero: Masculino"
                   style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-text-fill: #000000;" wrapText="true" />
            <Label fx:id="enderecoLabel" text="Endereço: Rua tal, nº - Jd qualquer, SP - 12960-780"
                   style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-text-fill: #000000;" wrapText="true" />
            <Label fx:id="cpfLabel" text="CPF: 487.789.459-09"
                   style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-text-fill: #000000;" wrapText="true" />
            <Label fx:id="perfilLabel" text="Perfil Investidor: Conservador"
                   style="-fx-font-family: 'Arial'; -fx-font-size: 14; -fx-text-fill: #000000;" wrapText="true" />
        </VBox>

        <!-- Espaço flexível -->
        <Region VBox.vgrow="ALWAYS"/>

        <!-- Botão Voltar -->
        <HBox spacing="16" alignment="CENTER">
            <Button fx:id="voltarButton" onAction="#onClickVoltar" text="Voltar"
                    style="-fx-background-color: #1E88E5; -fx-text-fill: #FFFFFF; -fx-font-family: 'Arial';
                           -fx-font-size: 14; -fx-background-radius: 20; -fx-min-width: 140; -fx-min-height: 48;" />
        </HBox>
    </VBox>

    <!-- Referência ao CSS -->
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</VBox>
