<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.controller.viewcontroller.QuestionarioPerfilController"
      style="-fx-background-color: #F8F9FA;" spacing="16" alignment="TOP_CENTER"
      prefWidth="360" prefHeight="640" padding="16">

    <!-- Cabeçalho -->
    <Label text="Questionário Perfil Investidor" style="-fx-text-fill: #2E86AB; -fx-font-weight: bold; -fx-font-size: 20;">
        <padding>
            <Insets bottom="16"/>
        </padding>
    </Label>

    <!-- Container das perguntas -->
    <ScrollPane fitToWidth="true" style="-fx-background: #FFFFFF; -fx-background-color: transparent;">
        <VBox spacing="24" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-padding: 16;">
            <!-- Pergunta 1 -->
            <VBox spacing="8">
                <Label text="1. Qual é o seu principal objetivo ao investir?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta1Group"/>
                <RadioButton toggleGroup="$pergunta1Group" text="A) Preservar o capital com segurança, mesmo que o retorno seja baixo"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta1Group" text="B) Equilibrar segurança e crescimento do patrimônio"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta1Group" text="C) Buscar altos retornos, mesmo que isso envolva riscos maiores"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Pergunta 2 -->
            <VBox spacing="8">
                <Label text="2. Por quanto tempo você pretende manter seus investimentos antes de precisar do dinheiro?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta2Group"/>
                <RadioButton toggleGroup="$pergunta2Group" text="A) Menos de 1 ano"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta2Group" text="B) Entre 1 e 5 anos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta2Group" text="C) Mais de 5 anos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Pergunta 3 -->
            <VBox spacing="8">
                <Label text="3. Como você reagiria se seus investimentos perdessem 10% do valor em um curto período?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta3Group"/>
                <RadioButton toggleGroup="$pergunta3Group" text="A) Ficaria muito preocupado e tentaria resgatar o dinheiro imediatamente"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta3Group" text="B) Ficaria incomodado, mas esperaria para ver se a situação melhora"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta3Group" text="C) Aceitaria a perda como parte do processo e manteria os investimentos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Pergunta 4 -->
            <VBox spacing="8">
                <Label text="4. Qual percentual do seu patrimônio você está disposto a investir em produtos de maior risco?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta4Group"/>
                <RadioButton toggleGroup="$pergunta4Group" text="A) Até 10%"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta4Group" text="B) Entre 10% e 30%"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta4Group" text="C) Mais de 30%"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Pergunta 5 -->
            <VBox spacing="8">
                <Label text="5. Qual é o seu nível de conhecimento sobre investimentos financeiros?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta5Group"/>
                <RadioButton toggleGroup="$pergunta5Group" text="A) Básico (conheço apenas opções seguras, como poupança)"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta5Group" text="B) Intermediário (já ouvi falar de fundos e ações, mas não domino o assunto)"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta5Group" text="C) Avançado (entendo bem o mercado e acompanho as tendências)"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Pergunta 6 -->
            <VBox spacing="8">
                <Label text="6. Você já tem uma reserva de emergência (equivalente a 6 meses de despesas)?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta6Group"/>
                <RadioButton toggleGroup="$pergunta6Group" text="A) Sim, e não pretendo usá-la para investimentos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta6Group" text="B) Sim, mas posso usar uma parte para investir"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta6Group" text="C) Não, e pretendo investir tudo o que tenho disponível"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Pergunta 7 -->
            <VBox spacing="8">
                <Label text="7. Qual é a sua tolerância a variações no valor dos seus investimentos?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta7Group"/>
                <RadioButton toggleGroup="$pergunta7Group" text="A) Prefiro estabilidade, mesmo com ganhos menores"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta7Group" text="B) Aceito pequenas variações em busca de melhores retornos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta7Group" text="C) Estou confortável com grandes oscilações por retornos altos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Pergunta 8 -->
            <VBox spacing="8">
                <Label text="8. Qual dessas opções de investimento você se sente mais confortável?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta8Group"/>
                <RadioButton toggleGroup="$pergunta8Group" text="A) Títulos públicos ou renda fixa com liquidez diária"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta8Group" text="B) Fundos mistos com renda fixa e um pouco de renda variável"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta8Group" text="C) Ações ou fundos de maior risco"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Pergunta 9 -->
            <VBox spacing="8">
                <Label text="9. Caso precisasse escolher, o que seria mais importante para você?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta9Group"/>
                <RadioButton toggleGroup="$pergunta9Group" text="A) Segurança do valor investido"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta9Group" text="B) Um equilíbrio entre segurança e rentabilidade"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta9Group" text="C) Maximizar a rentabilidade, mesmo com risco"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Pergunta 10 -->
            <VBox spacing="8">
                <Label text="10. Qual é a sua experiência prévia com investimentos?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold;"/>
                <ToggleGroup fx:id="pergunta10Group"/>
                <RadioButton toggleGroup="$pergunta10Group" text="A) Nenhuma ou apenas em produtos simples (ex.: poupança)"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="A"/>
                <RadioButton toggleGroup="$pergunta10Group" text="B) Já investi em fundos ou renda fixa com orientação"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="B"/>
                <RadioButton toggleGroup="$pergunta10Group" text="C) Já investi por conta própria em ações ou outros produtos de risco"
                             style="-fx-text-fill: #333333; -fx-font-size: 14;" userData="C"/>
            </VBox>

            <!-- Botão de Confirmação -->
            <Button text="Confirmar" onAction="#confirmarRespostas"
                    style="-fx-background-color: #2E86AB; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-pref-height: 48; -fx-pref-width: 200; -fx-background-radius: 8;">
                <padding>
                    <Insets left="24" right="24"/>
                </padding>
            </Button>
        </VBox>
    </ScrollPane>
</VBox>