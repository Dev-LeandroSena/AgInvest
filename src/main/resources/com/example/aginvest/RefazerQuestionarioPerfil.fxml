<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="0" prefWidth="360" prefHeight="640" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.aginvest.controller.viewcontroller.QuestionarioPerfilController"
      style="-fx-background-color: #F8F9FA;">

    <!-- Barra de Navegação Superior -->
    <HBox alignment="CENTER_LEFT" spacing="16" style="-fx-background-color: #1E90FF; -fx-padding: 8 16 8 16;">
        <HBox alignment="CENTER_LEFT" spacing="0">
            <Label text="Invest" style="-fx-text-fill: #FFFFFF; -fx-font-size: 20; -fx-font-weight: bold;" />
            <Label text="7" style="-fx-text-fill: #1FCE52; -fx-font-size: 20; -fx-font-weight: bold;" />
        </HBox>
        <HBox HBox.hgrow="ALWAYS" />
        <Button fx:id="homeButton" onAction="#onClickHome" text="Home" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14; -fx-cursor: hand;" />
        <Button fx:id="faqButton" text="FAQ" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14; -fx-cursor: hand;" />
        <Button fx:id="contaButton" text="Conta" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 14; -fx-cursor: hand;" />
    </HBox>

    <!-- Título Centralizado -->
    <Label text="Questionário Perfil Investidor"
           style="-fx-text-fill: #2E86AB; -fx-font-weight: bold; -fx-font-size: 20;">
        <padding>
            <Insets top="24" right="16" bottom="16" left="16"/>
        </padding>
    </Label>

    <!-- Área rolável principal (idêntica à tela de cadastro) -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                style="-fx-background: #F8F9FA; -fx-background-color: transparent;"
                VBox.vgrow="ALWAYS">

        <VBox spacing="24" style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-padding: 24 16 24 16; -fx-min-width: 360;">

            <!-- Pergunta 1 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="1. Qual é o seu principal objetivo ao investir?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta1A"
                             text="A) Preservar o capital com segurança, mesmo que o retorno seja baixo"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta1B"
                             text="B) Equilibrar segurança e crescimento do patrimônio"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta1C"
                             text="C) Buscar altos retornos, mesmo que isso envolva riscos maiores"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Pergunta 2 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="2. Por quanto tempo você pretende manter seus investimentos antes de precisar do dinheiro?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta2A"
                             text="A) Menos de 1 ano"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta2B"
                             text="B) Entre 1 e 5 anos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta2C"
                             text="C) Mais de 5 anos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Pergunta 3 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="3. Como você reagiria se seus investimentos perdessem 10% do valor em um curto período?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta3A"
                             text="A) Ficaria muito preocupado e tentaria resgatar o dinheiro imediatamente"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta3B"
                             text="B) Ficaria incomodado, mas esperaria para ver se a situação melhora"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta3C"
                             text="C) Aceitaria a perda como parte do processo e manteria os investimentos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Pergunta 4 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="4. Qual percentual do seu patrimônio você está disposto a investir em produtos de maior risco?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta4A"
                             text="A) Até 10%"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta4B"
                             text="B) Entre 10% e 30%"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta4C"
                             text="C) Mais de 30%"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Pergunta 5 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="5. Qual é o seu nível de conhecimento sobre investimentos financeiros?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta5A"
                             text="A) Básico (conheço apenas opções seguras, como poupança)"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta5B"
                             text="B) Intermediário (já ouvi falar de fundos e ações, mas não domino o assunto)"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta5C"
                             text="C) Avançado (entendo bem o mercado e acompanho as tendências)"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Pergunta 6 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="6. Você já tem uma reserva de emergência (equivalente a 6 meses de despesas)?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta6A"
                             text="A) Sim, e não pretendo usá-la para investimentos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta6B"
                             text="B) Sim, mas posso usar uma parte para investir"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta6C"
                             text="C) Não, e pretendo investir tudo o que tenho disponível"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Pergunta 7 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="7. Qual é a sua tolerância a variações no valor dos seus investimentos?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta7A"
                             text="A) Prefiro estabilidade, mesmo com ganhos menores"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta7B"
                             text="B) Aceito pequenas variações em busca de melhores retornos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta7C"
                             text="C) Estou confortável com grandes oscilações por retornos altos"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Pergunta 8 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="8. Qual dessas opções de investimento você se sente mais confortável?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta8A"
                             text="A) Títulos públicos ou renda fixa com liquidez diária"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta8B"
                             text="B) Fundos mistos com renda fixa e um pouco de renda variável"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta8C"
                             text="C) Ações ou fundos de maior risco"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Pergunta 9 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="9. Caso precisasse escolher, o que seria mais importante para você?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta9A"
                             text="A) Segurança do valor investido"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta9B"
                             text="B) Um equilíbrio entre segurança e rentabilidade"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta9C"
                             text="C) Maximizar a rentabilidade, mesmo com risco"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Pergunta 10 -->
            <VBox spacing="8" style="-fx-min-width: 320;">
                <Label text="10. Qual é a sua experiência prévia com investimentos?"
                       style="-fx-text-fill: #333333; -fx-font-size: 16; -fx-font-weight: bold; -fx-wrap-text: true;"/>

                <RadioButton fx:id="pergunta10A"
                             text="A) Nenhuma ou apenas em produtos simples (ex.: poupança)"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="A"/>

                <RadioButton fx:id="pergunta10B"
                             text="B) Já investi em fundos ou renda fixa com orientação"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="B"/>

                <RadioButton fx:id="pergunta10C"
                             text="C) Já investi por conta própria em ações ou outros produtos de risco"
                             style="-fx-text-fill: #333333; -fx-font-size: 14; -fx-wrap-text: true; -fx-cursor: hand;"
                             userData="C"/>
            </VBox>

            <!-- Botão de Confirmação -->
            <!-- Botões Voltar e Confirmar -->
            <HBox spacing="24" alignment="CENTER" style="-fx-padding: 16;">
                <Button fx:id="voltarButton" text="Voltar" onAction="#onClickVoltar"
                        style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 16;
                               -fx-pref-height: 48; -fx-pref-width: 120; -fx-background-radius: 8; -fx-cursor: hand;" />
                <Button fx:id="confirmarButtonRefazer" text="Confirmar" onAction="#confirmarRefazer"
                        style="-fx-background-color: #32CD32; -fx-text-fill: white; -fx-font-size: 16;
                               -fx-pref-height: 48; -fx-pref-width: 120; -fx-background-radius: 8; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </ScrollPane>
</VBox>